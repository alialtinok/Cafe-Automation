@model CafeOtomasyonu.Models.EntityFramework.Masa
@{
    ViewBag.Title = "MasaForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Masa Form</h2>
@using (Html.BeginForm("Kaydet", "Masa", FormMethod.Post))
{
    <div class="form-group">

        @Html.LabelFor(m => m.MasaIsim)
        @Html.TextBoxFor(m => m.MasaIsim, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MasaHesap)
        @Html.TextBoxFor(m => m.MasaHesap, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.MasaID)

    <br />
    <button type="submit" class="btn btn-success">Kaydet</button>

}
